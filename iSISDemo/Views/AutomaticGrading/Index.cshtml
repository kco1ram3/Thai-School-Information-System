@using iSISDemo.Models
@model IEnumerable<iSISModel.DiscreteGrade>
@{
    ViewBag.Title = ModelsRepository.GetLabel("AutomaticGradingSetup");
}

<h2>@ModelsRepository.GetLabel("AutomaticGradingSetup")</h2>

@using (Html.BeginForm())
{
    @Html.Partial("_GridViewAutomaticGradingSetup", Model)
    <p>
        @Html.DevExpress().Button(
                settings =>
                {
                    settings.Name = "btnSave";
                    settings.Text = ModelsRepository.GetLabel("Save");
                    settings.UseSubmitBehavior = true;
                }
            ).GetHtml()
    </p>
}